{
  "short_name": "Flickbait",
  "name": "React Flickbait App",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Lets you annotate web pages and persists those annotaions across page visits",
  "permissions": ["storage", "tabs"],
  "content_security_policy": "connect-src ws://localhost:8097",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js":["./main.js"],
      "css":["/main.css"],
      "run_at": "document_end"
    }
  ],
  "browser_action":{
    "default_title": "Flickbait",
    "default_popup": "./popup.html"
  }
}